<style>
  .recent-posts{
    display: flex;
    flex-wrap: wrap;
  }
</style>

<h3 class="mt-3">Recent Posts</h3>
<div class="recent-posts mt-3">
  
  <% for(blog of allBlogs){ %>
  <div class="card m-3" style="width: 18rem; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <img src="<%= blog.imgURL %>" class="card-img-top" alt="blogImg" style="max-height: 200px;" />
    <div class="card-body">
      <h5 class="card-title"><%= blog.heading %></h5>
      <p class="card-text">
        <%= blog.title %>
      </p>
      <a href="/blogs/blog/<%= blog._id %>" class="btn btn-def">Read <i class="fa-solid fa-arrow-right"></i></a>
    </div>
  </div>
  <% } %>
</div>

